{% extends "layout.twig" %}

{% block title %}Verify Your Email{% endblock %}

{% block content %}
<div class="container">
    <h1 class="mt-4 mb-3">Verify Your Email</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Step 2: Check your inbox</h5>
        </div>
        <div class="card-body">
            <p>We've sent a verification email to:</p>
            <h5 class="mb-4">{{ email }}</h5>

            <p>Click on the link in the email to verify your address and continue with registration.</p>

            <div class="alert alert-info mt-4">
                <h6>Didn't receive the email?</h6>
                <ul class="mb-0">
                    <li>Check your spam or junk folder</li>
                    <li>Make sure you entered the correct email address</li>
                    <li>Wait a few minutes for email to arrive</li>
                </ul>
            </div>

            <div class="mt-4">
                <a href="{{ route('signup') }}" class="btn btn-outline-secondary">Use a different email address</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
